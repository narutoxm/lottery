{
  "name": "lottery-app",
  "version": "1.0.1",
  "description": "年会抽奖程序桌面应用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "electron": "electron .",
    "build-mac": "electron-builder --mac --arm64",
    "build-mac-x64": "electron-builder --mac --x64",
    "build-win": "electron-builder --win --x64",
    "build-win-portable": "electron-builder --win portable --x64",
    "postinstall": "cd server && npm install && cd ../product && npm install"
  },
  "author": "moshang",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.2",
    "chokidar": "^2.0.3",
    "express": "^4.16.3",
    "node-xlsx": "^0.12.1",
    "opn": "^5.3.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.lottery.app",
    "productName": "抽奖程序",
    "asar": false,
    "mac": {
      "target": {
        "target": "dmg",
        "arch": [
          "arm64"
        ]
      },
      "category": "public.app-category.entertainment",
      "icon": "build/icon.png"
    },
    "files": [
      "main.js",
      "server/**/*",
      "product/dist/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    }
  }
}